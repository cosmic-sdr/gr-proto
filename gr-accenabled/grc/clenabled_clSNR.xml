<?xml version="1.0"?>
<block>
  <name>OpenCL SNR Helper</name>
  <key>clenabled_clsnr</key>
  <category>[OpenCL-Accelerated]</category>
  <import>import clenabled</import>
  <make>#if $devices == 1
	clenabled.clSNR($openCLPlatform,1,0,0,$n_val,$k_val,$setDebug)
	#else
	clenabled.clSNR($openCLPlatform,$devices,$platformId,$deviceId,$n_val,$k_val,$setDebug)
	#end if</make>
	<param>
		<name>OpenCL Platform Type</name>
		<key>openCLPlatform</key>
		<type>enum</type>
		<option>
			<name>GPU</name>
			<key>1</key>
		</option>
		<option>
			<name>Accelerator</name>
			<key>2</key>
		</option>
		<option>
			<name>CPU</name>
			<key>3</key>
		</option>
		<option>
			<name>Any</name>
			<key>4</key>
		</option>
	</param>
	<param>
		<name>OpenCL Device</name>
		<key>devices</key>
		<type>enum</type>
		<option>
			<name>Any</name>
			<key>1</key>
			<opt>hide_specific:all</opt>
		</option>
		<option>
			<name>Specific</name>
			<key>2</key>
			<opt>hide_specific:</opt>
		</option>
	</param>
	<param>
		<name>Platform Id</name>
		<key>platformId</key>
		<type>enum</type>
		<hide>$devices.hide_specific</hide>
		<option>
			<name>0</name>
			<key>0</key>
		</option>
		<option>
			<name>1</name>
			<key>1</key>
		</option>
		<option>
			<name>2</name>
			<key>2</key>
		</option>
		<option>
			<name>3</name>
			<key>3</key>
		</option>
	</param>
	<param>
		<name>Device Id</name>
		<key>deviceId</key>
		<type>enum</type>
		<hide>$devices.hide_specific</hide>
		<option>
			<name>0</name>
			<key>0</key>
		</option>
		<option>
			<name>1</name>
			<key>1</key>
		</option>
		<option>
			<name>2</name>
			<key>2</key>
		</option>
		<option>
			<name>3</name>
			<key>3</key>
		</option>
	</param>
	<param>
		<name>Debug</name>
		<key>setDebug</key>
		<type>enum</type>
		<option>
			<name>Off</name>
			<key>0</key>
		</option>
		<option>
			<name>On</name>
			<key>1</key>
		</option>
	</param>
	<param>
			<name>n</name>
			<key>n_val</key>
			<value>1</value>
			<type>float</type>
	</param>
	<param>
			<name>k</name>
			<key>k_val</key>
			<value>0</value>
			<type>float</type>
	</param>
  <sink>
    <name>signal</name>
    <type>float</type>
  </sink>
  <sink>
    <name>noise</name>
    <type>float</type>
  </sink>
  <source>
    <name>out</name>
    <type>float</type>
  </source>
	<doc>
This block is an OpenCL enabled block that rolls up a divide, log10, and abs calculation in one OpenCL accelerated block:
Calculation is out = abs(n * log10(signal/noise) + k).

	</doc>
</block>
